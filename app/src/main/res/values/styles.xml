<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/btn_frameAndText_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="btn_text_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btn_frameAndText_color</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@drawable/btn_text_frame_style</item>
    </style>
    <style name="btn_text_noFrame_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/btn_frameAndText_color</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="add_label_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btn_frameAndText_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">18dp</item>
    </style>
    <style name="text_input_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/btn_frameAndText_color</item>
    </style>
    <style name="edit_text_label_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/btn_frameAndText_color</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


</resources>
